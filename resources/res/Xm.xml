<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/page_title" layout="@layout/c_widget_action_bar"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_below="@+id/page_title">
        <TextView android:textSize="@dimen/dp24" android:textStyle="bold" android:textColor="@color/c_7cacea" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:text="@string/mobile_check_tip_1"/>
        <TextView android:textSize="@dimen/dp16" android:textStyle="bold" android:textColor="@color/c_222222" android:id="@+id/tip_3_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/mobile_check_tip_2"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp">
            <TextView android:textSize="24dp" android:textStyle="bold" android:textColor="@color/c_2a2a2a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+62"/>
            <TextView android:textSize="24dp" android:textStyle="bold" android:textColor="@color/c_2a2a2a" android:gravity="center_vertical" android:id="@+id/mobile_tv" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="9dp" android:text="888****1234"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/sp16" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/login_tv" android:background="@drawable/bg_main_theme_8radius" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="24dp" android:text="@string/login_face_btn"/>
        <TextView android:textSize="@dimen/sp16" android:textStyle="bold" android:textColor="@color/c_7cacea" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/more_tv" android:background="@drawable/bg_border_7cacea_blue_8radius" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="12dp" android:text="@string/login_pwd_more"/>
    </LinearLayout>
    <ImageView android:id="@+id/login_v1_tip_1" android:layout_width="144dp" android:layout_height="144dp" android:layout_marginLeft="@dimen/dp10" android:layout_marginBottom="@dimen/dp10" android:src="@drawable/ic_login_v1_tip_1" android:layout_alignParentBottom="true"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/login_v1_tip_1" android:layout_alignParentBottom="true">
        <ImageView android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginBottom="25dp" android:src="@drawable/ic_ojk_ful" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>

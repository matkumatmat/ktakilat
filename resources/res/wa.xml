<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/dana_dialog" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/c_2e343c" android:gravity="center" android:layout_gravity="center" android:id="@+id/title" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginTop="20dp" android:layout_marginRight="24dp" android:text="消息提示"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="20dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="14sp" android:textColor="@color/c_8f9fb3" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:text="" android:minLines="2" android:lineSpacingExtra="3dp" android:lineSpacingMultiplier="1.2"/>
        </LinearLayout>
    </ScrollView>
    <View android:id="@+id/v_line" android:background="@color/c_ebf1f9" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="24dp" android:layout_marginTop="16dp" android:layout_marginRight="24dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="36dp" android:layout_margin="24dp">
        <Button android:textSize="12sp" android:textStyle="bold" android:textColor="@color/c_8f9fb3" android:gravity="center" android:id="@+id/cancel" android:background="@drawable/bg_white_border_light_blue_4radius" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="16dp" android:text="CANCEL" android:layout_weight="1"/>
        <Button android:textSize="12sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/ok" android:background="@drawable/bg_main_theme_8radius" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="OK" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/main" android:background="@drawable/mobile_check_top_shadow_background" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/header" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/mobile_check_header" android:adjustViewBounds="true"/>
        <LinearLayout android:orientation="vertical" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingHorizontal="16dp">
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:background="@drawable/mobile_phone_rounded_outline" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:textStyle="bold" android:id="@+id/phone_number_prefix" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/phone_number_prefix" android:layout_marginEnd="16dp"/>
                <FrameLayout android:layout_gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="14sp" android:textColor="@color/T3" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_gravity="center" android:id="@+id/edit_hint" android:layout_width="match_parent" android:layout_height="32dp" android:text="@string/login_or_signup_hint"/>
                    <com.ktakilat.loan.mobile_check.MobileCheckEditText android:textSize="16sp" android:textStyle="bold" android:id="@+id/edit_text" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="32dp" android:inputType="number" android:autofillHints="phone" app:hintEnabled="false" style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/start_8_hint" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/information_circle" android:contentDescription="@string/login_or_signup_hint" android:layout_marginEnd="4dp"/>
                <TextView android:textColor="#a5a1a1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/login_or_signup_hint_with08" android:layout_weight="1"/>
            </LinearLayout>
            <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="44dp">
                <androidx.appcompat.widget.AppCompatButton android:enabled="false" android:textColor="@color/white" android:id="@+id/next" android:background="@drawable/filled_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/login_or_signup_button" android:elevation="0dp" android:backgroundTint="@null" android:outlineProvider="none" style="@null"/>
                <com.google.android.material.progressindicator.CircularProgressIndicator android:layout_gravity="center" android:id="@+id/loading" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:indeterminate="true"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout android:gravity="bottom" android:orientation="vertical" android:id="@+id/linearLayout" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:paddingHorizontal="16dp">
            <TextView android:textSize="12sp" android:textColor="#bab8b8" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_marginBottom="2dp" android:text="@string/login_or_signup_help" android:textAlignment="center"/>
            <TextView android:textSize="12sp" android:textColor="@color/ktaSecondary" android:id="@+id/bottom_link" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="24dp" android:textAlignment="center"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="24dp" android:layout_marginBottom="24dp" android:src="@drawable/afpi" android:contentDescription="@string/afpi"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

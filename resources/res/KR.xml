        </LinearLayout>
        <View android:background="@color/line_greyColor" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="6dp"/>
        <TextView android:enabled="false" android:textSize="@dimen/sp16" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/login_tv" android:background="@drawable/filled_button" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="24dp" android:text="@string/login"/>

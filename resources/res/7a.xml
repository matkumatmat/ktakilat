<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="312dp" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:layout_marginBottom="40dp">
    <LinearLayout android:orientation="vertical" android:background="@drawable/dana_dialog" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="104dp" android:layout_marginBottom="32dp">
        <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/c_7cacea" android:gravity="center" android:layout_gravity="center" android:id="@+id/title" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginTop="26dp" android:layout_marginRight="24dp" android:text="TIPS"/>
        <ScrollView android:id="@+id/scroll_view" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="10dp" android:layout_weight="1">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:textSize="13sp" android:textColor="@color/c_8f9fb3" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:text="@string/launch_protocol_content" android:minLines="2" android:lineSpacingExtra="3dp"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginTop="14dp" android:layout_marginRight="24dp" android:layout_marginBottom="24dp">
            <androidx.appcompat.widget.AppCompatButton android:textSize="12sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/ok" android:background="@drawable/filled_button" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="match_parent" android:layout_height="48dp" android:text="@string/private_ok" android:textAllCaps="false" android:outlineProvider="none"/>
            <androidx.appcompat.widget.AppCompatButton android:textSize="12sp" android:textStyle="bold" android:textColor="@color/c_8f9fb3" android:gravity="center" android:id="@+id/cancel" android:background="@drawable/outlined_button" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="14dp" android:text="@string/private_cancel" android:textAllCaps="false" android:outlineProvider="none"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_width="match_parent" android:layout_height="119dp" android:src="@drawable/ic_terms_title" android:scaleType="fitXY" android:layout_centerHorizontal="true"/>
</RelativeLayout>

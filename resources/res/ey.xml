<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/page_title" layout="@layout/c_widget_action_bar"/>
    <ImageView android:layout_width="301dp" android:layout_height="194dp" android:src="@drawable/ic_login_v1_tip_2" android:scaleType="fitEnd" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/page_title">
        <LinearLayout android:id="@+id/phone_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp24" android:layout_marginTop="56dp" android:layout_marginRight="@dimen/dp24">
            <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="@color/c_2a2a2a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+62"/>
            <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="@color/c_2a2a2a" android:gravity="center_vertical" android:id="@+id/get_code_phone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="8dp" android:text="888****1234"/>
        </LinearLayout>
        <TextView android:textSize="12dp" android:textColor="@color/c_94959b" android:id="@+id/tip_2_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp24" android:layout_marginTop="12dp" android:layout_marginRight="@dimen/dp24" android:text="@string/change_phone_input_code_tip" android:layout_below="@+id/phone_layout"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/lay_code" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="18dp" android:layout_marginTop="18dp" android:layout_marginRight="23dp" android:layout_below="@+id/tip_2_tv" android:layout_marginStart="18dp" android:layout_marginEnd="23dp">
            <ImageView android:layout_gravity="center_vertical" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="3dp" android:src="@drawable/ic_login_otp_code" android:layout_marginStart="3dp"/>
            <View android:background="@color/c_7cacea" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dp6" android:layout_marginTop="@dimen/dp14" android:layout_marginBottom="@dimen/dp14"/>
            <EditText android:textSize="15sp" android:textColor="#3c3f56" android:gravity="center_vertical" android:id="@+id/code_edit" android:background="@null" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="9dp" android:hint="@string/enter_the_verification_code" android:maxLines="1" android:maxLength="15" android:layout_weight="1" android:inputType="number" android:layout_marginStart="9dp"/>
            <TextView android:textSize="11sp" android:textColor="@color/common_home_header_color" android:gravity="center" android:id="@+id/verify_resend_code_title" android:background="@drawable/bg_border_blue_24radius" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="24dp" android:minWidth="80dp" android:text="@string/send_code"/>
        </LinearLayout>
        <View android:id="@+id/viewSpliteHead" android:background="#e5e8ed" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="18dp" android:layout_marginRight="23dp" android:layout_below="@+id/lay_code" android:layout_marginStart="18dp" android:layout_marginEnd="23dp"/>
        <TextView android:enabled="false" android:textSize="@dimen/sp16" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/commit_button" android:background="@drawable/filled_button" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="16dp" android:layout_marginTop="28dp" android:layout_marginRight="16dp" android:layout_marginBottom="28dp" android:text="@string/checked" android:layout_below="@+id/viewSpliteHead"/>
    </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/page_title" layout="@layout/c_widget_action_bar"/>
    <ImageView android:layout_width="230dp" android:layout_height="190dp" android:src="@drawable/bg_phone_about" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/page_title">
        <TextView android:textSize="@dimen/sp12" android:textColor="#31445d" android:id="@+id/get_code_header" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/we_have_sent_the_code_to" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="@dimen/sp16" android:textStyle="bold" android:textColor="#31445d" android:id="@+id/get_code_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/_62" android:layout_below="@+id/get_code_header" android:layout_centerHorizontal="true"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/lay_code" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="18dp" android:layout_marginTop="18dp" android:layout_marginRight="23dp" android:layout_below="@+id/get_code_phone" android:layout_marginStart="18dp" android:layout_marginEnd="23dp">
            <ImageView android:layout_gravity="center_vertical" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="3dp" android:src="@drawable/icon_code_security" android:layout_marginStart="3dp"/>
            <EditText android:textSize="15sp" android:textColor="#3c3f56" android:gravity="center_vertical" android:id="@+id/code_edit" android:background="@null" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="9dp" android:hint="@string/enter_the_verification_code" android:maxLines="1" android:maxLength="15" android:layout_weight="1" android:inputType="number" android:layout_marginStart="9dp"/>
            <TextView android:textSize="11sp" android:textColor="@color/common_home_header_color" android:gravity="center" android:id="@+id/verify_resend_code_title" android:background="@drawable/bg_border_blue_24radius" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="24dp" android:minWidth="80dp" android:text="@string/send_code"/>
        </LinearLayout>
        <View android:id="@+id/viewSpliteHead" android:background="#e5e8ed" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="18dp" android:layout_marginRight="23dp" android:layout_below="@+id/lay_code" android:layout_marginStart="18dp" android:layout_marginEnd="23dp"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/llSendVoiceCode" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_below="@+id/viewSpliteHead">
            <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#ffb2b8c2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/canot_receive_sms"/>
            <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#ff7cacea" android:id="@+id/tvSendVoiceCode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:text="@string/send_voice_code" android:layout_marginStart="9dp"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/sp16" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/commit_button" android:background="@drawable/bg_main_theme_8radius" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="28dp" android:text="@string/checked" android:layout_below="@+id/llSendVoiceCode"/>
    </RelativeLayout>
</RelativeLayout>

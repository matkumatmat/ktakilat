<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/B3" android:layout_width="match_parent" android:layout_height="match_parent" android:minWidth="300dp">
    <include android:id="@+id/page_title" layout="@layout/c_widget_action_bar"/>
    <ImageView android:id="@+id/tip_iv_change_mobile" android:layout_width="218dp" android:layout_height="135dp" android:src="@drawable/ic_change_mobile_input_mobile" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"/>
    <ImageView android:id="@+id/tip_iv_forget_pwd" android:visibility="gone" android:layout_width="208dp" android:layout_height="146dp" android:src="@drawable/ic_forget_pwd_input_mobile" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/form_view" android:paddingTop="48dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/page_title">
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/c_222222" android:id="@+id/top_1_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp24" android:layout_marginRight="@dimen/dp24" android:text="@string/apply_success_congratulations"/>
        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/c_222222" android:id="@+id/top_2_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp24" android:layout_marginTop="20dp" android:layout_marginRight="@dimen/dp24" android:text="@string/change_phone_input_mobile_tip"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginLeft="@dimen/dp24" android:layout_marginTop="@dimen/dp24" android:layout_marginRight="@dimen/dp24">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/c_222222" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/_62"/>
            <EditText android:textSize="16sp" android:textStyle="bold" android:textColor="@color/c_222222" android:gravity="center_vertical" android:id="@+id/phone_input_edit" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/change_phone_input_mobile_hint" android:maxLines="1" android:maxLength="24" android:inputType="number" android:layout_marginStart="11dp"/>
        </LinearLayout>
        <View android:background="@color/line_greyColor" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="@dimen/dp24" android:layout_marginTop="@dimen/dp8" android:layout_marginRight="@dimen/dp24"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:background="@color/B3" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:layout_below="@+id/form_view">
        <androidx.appcompat.widget.AppCompatButton android:enabled="false" android:textSize="16sp" android:textColor="@color/T1" android:id="@+id/pass_submit" android:background="@drawable/filled_button" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="@dimen/dp24" android:layout_marginTop="10dp" android:layout_marginRight="@dimen/dp24" android:layout_marginBottom="10dp" android:text="@string/next" android:layout_marginStart="@dimen/dp24" android:layout_marginEnd="@dimen/dp24" android:outlineProvider="none"/>
    </LinearLayout>
</RelativeLayout>

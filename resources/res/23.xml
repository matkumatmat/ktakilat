<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="true">
        <ripple android:color="@color/ripperColor">
            <item>
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <corners android:radius="24dp"/>
                            <gradient android:startColor="#17ead9" android:endColor="#4f92e6" android:angle="-90"/>
                        </shape>
                    </item>
                    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
                        <shape android:shape="rectangle">
                            <corners android:radius="24dp"/>
                            <solid android:color="@color/white"/>
                        </shape>
                    </item>
                </layer-list>
            </item>
        </ripple>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <solid android:color="#c5c5c5"/>
        </shape>
    </item>
</selector>
